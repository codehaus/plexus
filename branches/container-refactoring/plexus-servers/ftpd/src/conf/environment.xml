<?xml version="1.0"?>
<!--
                                README!

    Basic config file that sets up context for server application.

-->
<environment>

    <logs>
      <category name="" target="default" priority="DEBUG" />
      <category name="ftp-server" target="default" priority="DEBUG" />
      <log-target name="default" location="/logs/server-ftp.log" />
    </logs>

    <policy>
      <grant code-base="sar:SAR-INF/lib/*">
        <permission class="java.security.AllPermission" />
      </grant>
    </policy>

</environment>
