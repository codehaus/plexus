<?xml version="1.0"?>
<authorisation>
	<components>
		<component>
			<role>nz.co.bonao.security.user.UserManager</role>
			<!-- for non mapped methods -->
			<default></default>
			<!-- for all methods. Includes mapped and unmapped -->
			<all>
					<perm>login:*</perm>
					</all>
			<!--full access. bypasses all other constraints -->
			<full></full>
			<method>
				<name>listUsers(..)</name>	
				<perm>login:view_accounts</perm>
			</method>
		
		</component>	
		
		
	</components>	
	
	
	
</authorisation>