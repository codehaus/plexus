<?xml version="1.0"?>
<xml-security version="1">
	<!-- all the permissions in the system -->
	<permissions>
		<perm><name>perm1</name><desc></desc></perm>
		<perm><name>perm2</name><desc></desc></perm>
		<perm><name>perm3</name><desc></desc></perm>
	</permissions>	
	<!-- all the roles in the system -->
	<roles>
		<role name="role1">
			<desc></desc>
			<perm>perm1</perm>
			<perm>perm2</perm>
			<perm>perm3</perm>
		</role>
	</roles>
	<!-- match the roles and users -->
	<acl-entries>
		<role name="role1">
			<user>tom</user>	
			<user>dick</user>	
			<user>harry</user>	
		</role>
	</acl-entries>
</xml-security>