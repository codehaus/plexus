<configuration>
  <webapps>
    <webapp>
      <file>${app.home}/lib/continuum-web-1.0-alpha-3-SNAPSHOT.jar</file>
      <context>/continuum</context>
      <standardWebappClassloader>true</standardWebappClassloader>
      <extraction-path>${app.home}/webapp</extraction-path>
      <virtual-host>www.foo.com</virtual-host>
      <listeners>
        <http-listener>
          <host></host>
          <port>123</port>
        </http-listener>
        <proxy-http-listener>
          <port>8090</port>
          <proxy-host>localhost</proxy-host>
          <proxy-port>80</proxy-port>
        </proxy-http-listener>
      </listeners>
    </webapp>
  </webapps>
  <webContexts>
    <webContext>
      <context>/repository</context>
      <path>/path/to/repository</path>
      <virtual-host>www.foo.com</virtual-host>
      <listeners>
        <http-listener>
          <host></host>
          <port>123</port>
        </http-listener>
        <proxy-http-listener>
          <port>8090</port>
          <proxy-host>localhost</proxy-host>
          <proxy-port>80</proxy-port>
        </proxy-http-listener>
      </listeners>
    </webContext>
  </webContexts>
</configuration>
