<?xml version="1.0"?>

<!--
  An XML file declaring the necessary roles required to view certain pages.  At
  the moment it only supports one role association per page.
 -->
 
<resources>
	<resource>
		<name>everyone.html</name>
		<credential>employee_read</credential>
	</resource>
	<resource>
		<name>emptycred.html</name>
		<credential></credential>
	</resource>
	<resource>
		<name>formanagers</name>
		<credential>employee_update</credential>
		<resources>
			<resource>
				<name>employees.html</name>
				<credential>employee_update</credential>
			</resource>
			<resource>
				<name>badcred.html</name>
				<credential>guest</credential>
			</resource>
		</resources>
	</resource>
</resources>
