<?xml version="1.0" encoding="ISO-8859-1"?>

<project>

  <groupId>openim</groupId>
  <id>openim-server-api</id>
  <name>OpenIM Server API</name>
  <package>net.java.dev.openim</package>
  <currentVersion>1.2.2</currentVersion>

  <inceptionYear>2003</inceptionYear>
  <shortDescription>OpenIM Server API</shortDescription>
  <description>
	OpenIM Server API
  </description>
  
  <extend>${basedir}/../../project.xml</extend>
  
  <dependencies>
  
	<!-- openim dependencies -->
    <dependency>
      <groupId>openim</groupId>
      <artifactId>openim-storage-api</artifactId>
      <version>1.2.2</version>
    </dependency>
    
    <dependency>
      <groupId>openim</groupId>
      <artifactId>openim-users-manager-api</artifactId>
      <version>1.3.1</version>
    </dependency>

    <dependency>
      <groupId>openim</groupId>
      <artifactId>jabber-data-model</artifactId>
      <version>1.0</version>
    </dependency>

   <!-- xpp dependencies -->
  
    <dependency>
      <groupId>kxml2</groupId>
      <artifactId>kxml2</artifactId>
      <version>2.1.8</version>
    </dependency>
  
   <!-- avalon dependencies -->
    <dependency>
      <groupId>avalon-framework</groupId>
      <artifactId>avalon-framework-api</artifactId>
      <version>4.2.0</version>
    </dependency>

    <!-- cornerstone dependencies -->
    <dependency>
      <groupId>cornerstone-connection</groupId>
      <artifactId>cornerstone-connection-api</artifactId>
      <version>2.0.0</version>
    </dependency>

  </dependencies>

  <build>

    <nagEmailAddress>alag@users.sf.net</nagEmailAddress>
    <sourceDirectory>${basedir}/src/java</sourceDirectory>
    <unitTestSourceDirectory>${basedir}/src/test</unitTestSourceDirectory>
    <integrationUnitTestSourceDirectory/>
    <aspectSourceDirectory/>

    <resources>
      <resource>
        <directory>${basedir}/src/java</directory>
        <includes>
          <include>**/*.dtd</include>
          <include>**/*.properties</include>
          <include>**/*.xinfo</include>
          <include>**/*.xtype</include>
          <include>**/*.xprofile</include>
          <include>**/*.xconfig</include>
          <include>**/*.xml</include>
          <include>**/*.xservice</include>
        </includes>
      </resource>
      <resource>
        <directory>${basedir}/conf</directory>
        <targetPath>BLOCK-INF</targetPath>
        <includes>
          <include>block.xml</include>
        </includes>
      </resource>
    </resources>
    <jars></jars>
  </build>

</project>
