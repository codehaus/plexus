
<container name="openim">

   <services>
     <service type="net.java.dev.openim.data.storage.DeferrableListRepositoryHolder">
       <source>DeferrableListRepositoryHolder</source>
     </service>
     <service type="net.java.dev.openim.data.storage.PrivateRepositoryHolder">
       <source>PrivateRepositoryHolder</source>
     </service>
     <service type="net.java.dev.openim.data.storage.RosterListRepositoryHolder">
       <source>RosterListRepositoryHolder</source>
     </service>
   </services>

   <categories>
     <category name="threads/classloader/scanner" priority="ERROR"/>
   </categories>

   <!--
   Block implementation.
   -->
   <classloader>
     <classpath>
       <repository>
           <!-- OpenIM -->
           <resource id="openim:openim-storage-api" version="1.2.2"/>
           
           <!-- Commons -->
           <resource id="commons-lang:commons-lang" version="2.0"/>

           <!-- Avalon -->
           <resource id="avalon-framework:avalon-framework-api" version="4.2.0"/>
           <resource id="avalon-framework:avalon-framework-impl" version="4.2.0"/>
           
           <!-- XStream -->
           <resource id="xstream:xstream" version="1.0.1"/>

           <!-- Excalibur -->
           <resource id="excalibur-io:excalibur-io" version="1.1"/>
           
        </repository>
     </classpath>
   </classloader>


   
   <component name="DeferrableListRepositoryHolder" class="net.java.dev.openim.data.storage.DeferrableListRepositoryHolderImpl" activation="lazy"/>
   <component name="PrivateRepositoryHolder" class="net.java.dev.openim.data.storage.PrivateRepositoryHolderImpl" activation="lazy"/>
   <component name="RosterListRepositoryHolder" class="net.java.dev.openim.data.storage.RosterListRepositoryHolderImpl" activation="lazy"/>
   
</container>
