<process>
  <id>context-modifying-process</id>
  <defaultExecutorId>plexus-action</defaultExecutorId>
  <steps>
    <step>
      <executorConfiguration>
        <actionId>echo-message</actionId>
      </executorConfiguration>
    </step>
    <step>
      <executorConfiguration>
        <actionId>set-context</actionId>
      </executorConfiguration>
      <configuration>
        <context-key>message</context-key>
        <context-value>Modified Hello World!</context-value>
      </configuration>
    </step>
    <step>
      <executorConfiguration>
        <actionId>echo-message</actionId>
      </executorConfiguration>
    </step>
  </steps>
</process>
