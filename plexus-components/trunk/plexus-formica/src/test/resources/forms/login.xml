<form>
  <id>login</id>
  <elements>
    <element>
      <id>login.username</id>
      <validators>
        <validator>
          <id>default</id>
          <error-message-key>login.username.error</error-message-key>
        </validator>
      </validators>
      <type>text</type>
    </element>
    <element>
      <id>login.password</id>
      <validators>
        <validator>
          <id>default</id>
          <error-message-key>login.username.error</error-message-key>
        </validator>
      </validators>
      <type>password</type>
    </element>
  </elements>
  <add>
    <title-key>tpi.title</title-key>
    <action>addTpi</action>
    <view>view</view>
  </add>
</form>
