<?xml version="1.0" ?>
<plexus>
  <components>
  
    <component>
      <role>org.codehaus.plexus.cache.Cache</role>
      <role-hint>hashmap</role-hint>
      <implementation>org.codehaus.plexus.cache.hashmap.HashMapCache</implementation>
      <configuration>
        <cache-hit-ratio>1.0</cache-hit-ratio>
        <cache-max-size>0</cache-max-size>
		<refreshTime>0</refreshTime>
      </configuration>
    </component>
	  
    <component>
      <role>org.codehaus.plexus.cache.Cache</role>
      <role-hint>alwaysrefresh</role-hint>
      <implementation>org.codehaus.plexus.cache.hashmap.HashMapCache</implementation>
      <configuration>
        <cache-hit-ratio>1.0</cache-hit-ratio>
        <cache-max-size>0</cache-max-size>
		<refreshTime>-1</refreshTime>
      </configuration>
    </component>
	  
	<component>
      <role>org.codehaus.plexus.cache.Cache</role>
      <role-hint>onesecondrefresh</role-hint>
      <implementation>org.codehaus.plexus.cache.hashmap.HashMapCache</implementation>
      <configuration>
        <cache-hit-ratio>1.0</cache-hit-ratio>
        <cache-max-size>0</cache-max-size>
		<refreshTime>1</refreshTime>
      </configuration>
    </component>	
	  
	  
	<component>
      <role>org.codehaus.plexus.cache.Cache</role>
      <role-hint>twosecondrefresh</role-hint>
      <implementation>org.codehaus.plexus.cache.hashmap.HashMapCache</implementation>
      <configuration>
        <cache-hit-ratio>1.0</cache-hit-ratio>
        <cache-max-size>0</cache-max-size>
		<refreshTime>2</refreshTime>
      </configuration>
    </component>	    
    
  </components>
</plexus>
