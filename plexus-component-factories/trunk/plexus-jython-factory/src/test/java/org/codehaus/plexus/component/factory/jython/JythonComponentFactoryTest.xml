<plexus>
  <component-factory-manager implementation="org.codehaus.plexus.component.factory.DefaultComponentFactoryManager">
    <component-factories>
      <component-factory implementation="org.codehaus.plexus.component.factory.jython.JythonComponentFactory">
        <id>jython</id>
        <python-home>${basedir}/target</python-home>
        <python-path>${basedir}/src/jython</python-path>
        <python-cachedir>${basedir}/target/cachedir</python-cachedir>
      </component-factory>
    </component-factories>
  </component-factory-manager>
</plexus>