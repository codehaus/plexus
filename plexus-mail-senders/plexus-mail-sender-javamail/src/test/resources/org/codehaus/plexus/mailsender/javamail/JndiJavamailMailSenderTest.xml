<plexus>
  <components>

    <component>
      <role>org.codehaus.plexus.mailsender.MailSender</role>
      <implementation>org.codehaus.plexus.mailsender.javamail.JndiJavamailMailSender</implementation>
      <configuration>
        <jndiSessionName>java:comp/env/mail/Session</jndiSessionName>
      </configuration>
    </component>

    <component>
      <role>org.codehaus.plexus.mailsender.test.SmtpServer</role>
      <implementation>org.codehaus.plexus.mailsender.test.DumbsterSmtpServer</implementation>
      <configuration>
        <port>4000</port>
      </configuration>
    </component>

    <component>
      <role>org.codehaus.plexus.naming.Naming</role>
      <role-hint>test</role-hint>
      <implementation>org.codehaus.plexus.naming.DefaultNaming</implementation>
      <configuration>
        <resources>
          <resource>
            <name>mail/Session</name>
            <type>javax.mail.Session</type>
            <properties>
              <property>
                <name>mail.smtp.host</name>
                <value>localhost</value>
              </property>
              <property>
                <name>mail.smtp.port</name>
                <value>4000</value>
              </property>
            </properties>
          </resource>
        </resources>
      </configuration>
    </component>
  </components>
 </plexus>
