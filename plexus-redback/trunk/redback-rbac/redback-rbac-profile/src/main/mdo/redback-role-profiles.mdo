<model>
  <id>redback-role-profile</id>
  <name>RedbackRoleProfiles</name>
  <description></description>
  <defaults>
    <default>
      <key>package</key>
      <value>org.codehaus.plexus.redback.role.model</value>
    </default>
  </defaults>

  <classes>
    <class rootElement="true" xml.tagName="redback-rbac">
      <name>RedbackRbac</name>
      <version>1.0.0+</version>
      <fields>
        <field>
          <name>resources</name>
          <version>1.0.0+</version>
          <association>
            <type>ProfileResource</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field>
          <name>operations</name>
          <version>1.0.0+</version>
          <association>
            <type>ProfileOperation</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field xml.tagName="role-profiles">
          <name>roleProfiles</name>
          <version>1.0.0+</version>
          <association>
            <type>RoleProfile</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
      </fields>
    </class>
    <class xml.tagName="role-profile">
      <name>RoleProfile</name>
      <description>role profiles specify a role and its corresponding permissions, child roles and parent roles to link to</description>
      <version>1.0.0+</version>
      <fields>
        <field>
          <name>id</name>
          <version>1.0.0+</version>
          <type>String</type>
          <identifier>true</identifier>
        </field>
        <field>
          <name>name</name>
          <description>either a normal name, or 'name - ${resource}'</description>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
        <field>
          <name>description</name>
          <description>description of this role</description>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
        <field>
          <name>assignable</name>
          <description>boolean specifying if a given role can assigned</description>
          <version>1.0.0+</version>
          <type>boolean</type>
          <defaultValue>false</defaultValue>
        </field>
        <field>
          <name>permanent</name>
          <description>boolean specifying if a given role can be removed once created</description>
          <version>1.0.0+</version>
          <type>boolean</type>
          <defaultValue>false</defaultValue>
        </field>
        <field>
          <name>permissions</name>
          <version>1.0.0+</version>
          <association>
            <type>ProfilePermission</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field xml.tagName="parent-role">
          <name>parentRoles</name>
          <description>the id of other role profiles to have create a child relationship to this role, can accept 'foo - ${resource}'</description>
          <version>1.0.0+</version>
          <association>
            <type>String</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field xml.tagName="child-role">
          <name>childRoles</name>
          <description>the id of other role profiles to assign as children to this role, can accept 'foo - ${resource}'</description>
          <version>1.0.0+</version>
          <association>
            <type>String</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
      </fields>
    </class>
    <class>
      <name>ProfileResource</name>
      <version>1.0.0+</version>
      <fields>
        <field>
          <name>id</name>
          <version>1.0.0+</version>
          <type>String</type>
          <identifier>true</identifier>
        </field>
        <field>
          <name>name</name>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
        <field>
          <name>permanent</name>
          <description>this resource should persist even if all referring permissions are removed</description>
          <version>1.0.0+</version>
          <type>boolean</type>
        </field>
        <field>
          <name>description</name>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
        </fields>
    </class>
    <class>
      <name>ProfileOperation</name>
      <version>1.0.0+</version>
      <fields>
        <field>
          <name>id</name>
          <version>1.0.0+</version>
          <type>String</type>
          <identifier>true</identifier>
        </field>
        <field>
          <name>name</name>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
        <field>
          <name>description</name>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
        <field>
          <name>permanent</name>
          <description>this operation should persist even if all referring permissions are removed</description>
          <version>1.0.0+</version>
          <type>boolean</type>
        </field>
        </fields>
    </class>
    <class>
      <name>ProfilePermission</name>
      <version>1.0.0+</version>
      <fields>
        <field>
          <name>id</name>
          <version>1.0.0+</version>
          <type>String</type>
          <identifier>true</identifier>
        </field>
        <field>
          <name>name</name>
          <description>default should be 'operation - resource' or 'operation - ${resource}'</description>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
        <field>
          <name>description</name>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
        <field>
          <name>permanent</name>
          <description>this permission should persist even if referring roles are removed</description>
          <version>1.0.0+</version>
          <type>boolean</type>
        </field>
        <field>
          <name>operation</name>
          <description>the id of the operation for this permission</description>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
        <field>
          <name>resource</name>
          <description>the id of the resource for this permission, can accept ${resource}</description>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
        </fields>
    </class>
  </classes>
</model>
          
