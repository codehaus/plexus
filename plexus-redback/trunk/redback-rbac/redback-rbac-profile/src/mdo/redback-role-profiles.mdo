<model>
  <id>redback-role-profile</id>
  <name>RedbackRoleProfile</name>
  <description></description>
  <defaults>
    <default>
      <key>package</key>
      <value>org.codehaus.plexus.redback.role.profile</value>
    </default>
  </defaults>

  <classes>
    <class rootElement="true" jpox.enabled="false" stash.storable="false">
      <name>RedbackRoleProfiles</name>
      <version>1.1.0+</version>
      <fields>
        <field>
          <name>staticRoles</name>
          <version>1.1.0+</version>
          <association>
            <type>StaticRoleProfile</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field>
          <name>dynamicRoles</name>
          <version>1.1.0+</version>
          <association>
            <type>DynamicRoleProfile</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
      </fields>
    </class>
    <class>
      <name>StaticRoleProfile</name>
      <version>1.1.0+</version>
      <fields>
        <field>
          <name>id</name>
          <version>1.1.0+</version>
          <type>int</type>
          <identifier>true</identifier>
        </field>
        <field>
          <name>name</name>
          <version>1.1.0+</version>
          <type>String</type>
        </field>
        <field>
          <name>assignable</name>
          <description>boolean specifying if a given role can assigned</description>
          <version>1.1.0+</version>
          <type>boolean</type>
          <defaultValue>false</defaultValue>
        </field>
        <field>
          <name>permanent</name>
          <description>boolean specifying if a given role can be removed once created</description>
          <version>1.1.0+</version>
          <type>boolean</type>
          <defaultValue>false</defaultValue>
        </field>
        <field>
          <name>permissions</name>
          <version>1.1.0+</version>
          <association>
            <type>Permission</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field>
          <name>childRoles</name>
          <description>the name of other static role profiles</description>
          <version>1.1.0+</version>
          <association>
            <type>String</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
    </class>
    <class>
      <name>DynamicRoleProfile</name>
      <version>1.1.0+</version>
      <fields>
        <field>
          <name>id</name>
          <version>1.1.0+</version>
          <type>int</type>
          <identifier>true</identifier>
        </field>
        <field>
          <name>namePrefix</name>
          <version>1.1.0+</version>
          <type>String</type>
        </field>
        <field>
          <name>assignable</name>
          <version>1.1.0+</version>
          <type>boolean</type>
          <defaultValue>false</defaultValue>
        </field>
        <field>
          <name>permanent</name>
          <version>1.1.0+</version>
          <type>boolean</type>
          <defaultValue>false</defaultValue>
        </field>
        <field>
          <name>Permissions</name>
          <version>1.1.0+</version>
          <association>
            <type>Permission</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field>
          <name>staticChildRoles</name>
          <description>the name of the static role profiles<description>
          <version>1.1.0+</version>
          <association>
            <type>String</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field>
          <name>dynamicChildRoles</name>
          <description>the names of the dynamic role profiles to be linked based on the resource</description>
          <version>1.1.0+</version>
          <association>
            <type>String</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
    </class>
     <class>
      <name>Permission</name>
      <version>1.1.0+</version>
      <fields>
        <field>
          <name>name</name>
          <description>default would be 'operation - resource'<description>
          <version>1.1.0+</version>
          <type>String</type>
        </field>
        <field>
          <name>operation</name>
          <version>1.1.0+</version>
          <type>String</type>
        </field>
        <field>
          <name>resource</name>
          <version>1.1.0+</version>
          <type>String</type>
        </field>
    </class>
  </classes>
</module>
          
