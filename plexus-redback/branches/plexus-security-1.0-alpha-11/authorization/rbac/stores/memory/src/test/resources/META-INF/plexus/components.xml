<plexus>
  <components>
    <component>
      <role>org.codehaus.plexus.security.Authenticator</role>
      <role-hint>default</role-hint>
      <implementation>org.codehaus.plexus.security.DefaultAuthenticator</implementation>
      <description>DefaultAuthenticator:</description>
      <requirements>
        <requirement>
          <role>org.codehaus.plexus.security.AuthenticationStore</role>
          <role-hint>simple</role-hint>
          <field-name>authStore</field-name>
        </requirement>
      </requirements>
    </component>
    <component>
      <role>org.codehaus.plexus.security.Authorizer</role>
      <role-hint>default</role-hint>
      <implementation>org.codehaus.plexus.security.DefaultAuthorizer</implementation>
      <description>DefaultAuthorizer:</description>
      <requirements>
        <requirement>
          <role>org.codehaus.plexus.security.AuthorizationStore</role>
          <role-hint>simple</role-hint>
          <field-name>store</field-name>
        </requirement>
      </requirements>
    </component>
    <component>
      <role>org.codehaus.plexus.security.PlexusSecuritySystemexusSecurityRealm</role>
      <role-hint>default</role-hint>
      <implementation>org.codehaus.plexus.security.DefaultPlexusSecuritySystemfaultPlexusSecurityRealm</implementation>
      <description>DefaultPlexusSecurityRealm:</description>
      <requirements>
        <requirement>
          <role>org.codehaus.plexus.security.Authenticator</role>
          <field-name>authenticator</field-name>
        </requirement>
        <requirement>
          <role>org.codehaus.plexus.security.Authorizer</role>
          <field-name>authorizer</field-name>
        </requirement>
        <!--
        <requirement>
          <role>org.codehaus.plexus.PlexusContainer</role>
          <field-name>container</field-name>
        </requirement>
        -->
      </requirements>
    </component>
  </components>
</plexus>
