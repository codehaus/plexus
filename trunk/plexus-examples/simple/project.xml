<?xml version="1.0"?>

<project>
  <pomVersion>3</pomVersion>
  <groupId>plexus-examples</groupId>
  <artifactId>simple</artifactId>
  <id>simple</id>
  <name>simple</name>
  <currentVersion>1.0</currentVersion>
  <organization>
    <name></name>
    <url></url>
    <logo></logo>
  </organization>
  <inceptionYear>2003</inceptionYear>
  <package>org.codehaus.plexus.examples.simple</package>
  <logo>/images/plexus-logo.gif</logo>
  
  <description>
  </description>
  
  <shortDescription>
    A simple "hello world" application that utilizes the Plexus
    component container.
  </shortDescription>

  <url>http://plexus.werken.com</url>
  <issueTrackingUrl></issueTrackingUrl>
 
  <siteAddress>plexus.werken.com</siteAddress>
  <siteDirectory>/www/plexus.werken.com</siteDirectory>
  
  <repository>
    <connection></connection>
    <url></url>
  </repository>

  <versions/>
  <branches/>

  <mailingLists>
    <mailingList>
      <name>Plexus Developer List</name>
      <subscribe>http://lists.werken.com/mailman/listinfo/plexus-dev</subscribe>
      <unsubscribe>http://lists.werken.com/mailman/listinfo/plexus-dev</unsubscribe>
    </mailingList>
  </mailingLists>

  <developers>
    <developer>
      <name>Pete Kazmier</name>
      <id>kaz</id>
      <email></email>
      <organization></organization>
      <roles>
        <role>Developer</role>
      </roles>
    </developer>
  </developers>
  
  <dependencies>

    <!-- Avalon -->
    <dependency>
      <groupId>avalon</groupId>
      <artifactId>avalon-framework-api</artifactId>
      <version>4.1.4</version>
    </dependency>

    <!-- AspectJ (in case one is using Plexus aspects) -->
    <dependency>
      <groupId>aspectj</groupId>
      <artifactId>aspectjrt</artifactId>
      <version>1.0.6</version>
    </dependency>
    
    <!-- Plexus -->
    <dependency>
      <groupId>xpp3</groupId>
      <artifactId>xpp3</artifactId>
      <version>1.1.3.3</version>
    </dependency>
    
    <dependency>
      <groupId>plexus</groupId>
      <artifactId>plexus</artifactId>
      <version>0.7</version>
    </dependency>
        
    <!-- PlexusTestCase -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
    </dependency>
    
    <!-- Launcher -->
    <dependency>
      <groupId>classworlds</groupId>
      <artifactId>classworlds</artifactId>
      <version>1.1-SNAPSHOT</version>
    </dependency>
  </dependencies>

  <build>
    <nagEmailAddress>plexus-dev@eng.werken.com</nagEmailAddress>
    <sourceDirectory>${basedir}/src/java</sourceDirectory>
    <unitTestSourceDirectory>${basedir}/src/test</unitTestSourceDirectory>

    <!-- Unit test classes -->
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      
      <resources>
        <resource>
          <directory>${basedir}/src/test</directory>
          <includes>
            <include>**/*.xml</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
    
    <resources>
      <resource>
        <directory>${basedir}/src/conf</directory>
        <includes>
          <include>**/*.xml</include>
        </includes>
      </resource>
    </resources>
  </build>
</project>

