      <dependency>
        <groupId>org.codehaus.plexus.security</groupId>
        <artifactId>plexus-security-user-management-provider-memory</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.codehaus.plexus.security</groupId>
        <artifactId>plexus-security-authorization-rbac-authorizer</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.codehaus.plexus.security</groupId>
        <artifactId>plexus-security-authorization-rbac-model</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.codehaus.plexus.security</groupId>
        <artifactId>plexus-security-authorization-rbac-store-test</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.codehaus.plexus.security</groupId>
        <artifactId>plexus-security-authorization-rbac-store-jdo</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.codehaus.plexus.security</groupId>
        <artifactId>plexus-security-ui-web</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.codehaus.plexus.security</groupId>
        <artifactId>plexus-security-ui-web-rbac</artifactId>
        <version>${project.version}</version>
      </dependency>
      <!-- Plexus -->
      <dependency>
        <groupId>org.codehaus.plexus</groupId>
        <artifactId>plexus-container-default</artifactId>
        <version>1.0-alpha-10-SNAPSHOT</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <dependencies>
    <!--
    This should be possible, the DAG should be smart enough to not add this
    dependency to the project in the reactor
    <dependency>
      <groupId>org.codehaus.plexus.security</groupId>
      <artifactId>plexus-security-common</artifactId>
    </dependency>
    -->
    <dependency>
      <groupId>org.codehaus.plexus</groupId>
      <artifactId>plexus-container-default</artifactId>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.4</source>
          <target>1.4</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <modules>
    <module>common</module>
    <module>system</module>
    <module>authentication</module>
    <module>authorization</module>
    <module>user-management</module>
    <module>ui</module>
    <module>examples</module>
  </modules>
</project>
