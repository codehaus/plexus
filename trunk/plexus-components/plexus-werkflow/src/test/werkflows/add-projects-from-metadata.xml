<workflow xmlns="http://werkflow.codehaus.org/simple" id="add-projects-from-metadata">
  <sequence>
    <for init="i=0" expr="count > 0" step="count--">
      <action id="validate-project"/>
    </for>

    <for init="i=0" expr="count > 0" step="count--">
      <action id="add-project-to-store"/>
    </for>

    <for init="i=0" expr="count > 0" step="count--">
      <action id="check-out-project"/>
    </for>

  </sequence>
</workflow>
