<component-set>
  <components>
    <component>
      <role>org.codehaus.plexus.werkflow.WorkflowEngine</role>
      <implementation>org.codehaus.plexus.werkflow.DefaultWorkflowEngine</implementation>
      <configuration>
        <werkflowDirectory>${basedir}/src/test/werkflows/</werkflowDirectory>
      </configuration>
      <requirements>
        <requirement>
          <role>org.codehaus.plexus.werkflow.WorkflowActionManager</role>
        </requirement>
        <requirement>
          <role>org.codehaus.plexus.werkflow.WorkflowErrorHandler</role>
        </requirement>
      </requirements>
    </component>
    <component>
      <role>org.codehaus.plexus.werkflow.WorkflowActionManager</role>
      <implementation>org.codehaus.plexus.werkflow.DefaultWorkflowActionManager</implementation>
    </component>
    <component>
      <role>org.codehaus.plexus.werkflow.WorkflowErrorHandler</role>
      <implementation>org.codehaus.plexus.werkflow.DefaultWorkflowErrorHandler</implementation>
    </component>
    <component>
      <role>org.codehaus.plexus.action.Action</role>
      <role-hint>update-scm</role-hint>
      <implementation>org.codehaus.plexus.werkflow.continuum.UpdateScm</implementation>
    </component>
    <component>
      <role>org.codehaus.plexus.action.Action</role>
      <role-hint>update-metadata</role-hint>
      <implementation>org.codehaus.plexus.werkflow.continuum.UpdateMetadata</implementation>
    </component>
    <component>
      <role>org.codehaus.plexus.action.Action</role>
      <role-hint>build</role-hint>
      <implementation>org.codehaus.plexus.werkflow.continuum.Build</implementation>
    </component>
    <component>
      <role>org.codehaus.plexus.action.Action</role>
      <role-hint>error</role-hint>
      <implementation>org.codehaus.plexus.werkflow.continuum.ErrorProducingAction</implementation>
    </component>
  </components>
</component-set>