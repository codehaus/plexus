<plexus>
  <components>
    <component>
      <role>org.codehaus.plexus.jetty.ServletContainer</role>
      <implementation>org.codehaus.plexus.jetty.JettyServletContainer</implementation>
      <configuration>
        <socket-listeners>
          <socket-listener>
            <host>localhost</host>
            <port>8080</port>
          </socket-listener>
        </socket-listeners>
        <ajp-listeners>
          <ajp-listener>
            <host>localhost</host>
            <port>8080</port>
          </ajp-listener>
        </ajp-listeners>
        <webapps-directory>${basedir}/target</webapps-directory>
        <stop-gracefully>true</stop-gracefully>
        <extract-wars>true</extract-wars>
      </configuration>
    </component>
  </components>
</plexus>
