<form>
  <id>person</id>
  <target-class>org.codehaus.plexus.formica.action.Person</target-class>
  <key-expression>id</key-expression>
  <source-role>org.codehaus.plexus.formica.action.PersonApplication</source-role>
  <lookup-expression>getPerson(#id)</lookup-expression>
  <elements>
    <element>
      <id>id</id>
      <expression>id</expression>
      <validator>default</validator>
      <label-key>id.label</label-key>
      <message-key>id.message</message-key>
      <error-message-key>id.errorMessage</error-message-key>
      <type>text</type>
    </element>
    <element>
      <id>firstName</id>
      <expression>firstName</expression>
      <validator>default</validator>
      <label-key>firstName.label</label-key>
      <message-key>firstName.message</message-key>
      <error-message-key>firstName.errorMessage</error-message-key>
      <type>text</type>
    </element>
    <element>
      <id>lastName</id>
      <expression>lastName</expression>
      <validator>default</validator>
      <label-key>lastName.label</label-key>
      <message-key>lastName.message</message-key>
      <error-message-key>lastName.errorMessage</error-message-key>
      <type>text</type>
    </element>
  </elements>
  <add>
    <title-key>tpi.title</title-key>
    <expression>addPerson(#entity)</expression>
    <view>view</view>
  </add>
  <update>
    <title-key>tpi.title</title-key>
    <expression>updatePerson(#entity)</expression>
    <view>view</view>
  </update>
  <view>
    <title-key>view.title</title-key>
  </view>
</form>
