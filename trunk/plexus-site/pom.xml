<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.codehaus.plexus</groupId>
    <artifactId>plexus</artifactId>
    <version>1.0.7</version>
  </parent>
  <artifactId>plexus-site</artifactId>
  <version>1.0-alpha-1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Plexus Site</name>
  <build>  
    <plugins>
      <plugin>
        <artifactId>maven-site-plugin</artifactId>
        <version>2.0-beta-5</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.doxia</groupId>
        <artifactId>doxia-maven-plugin</artifactId>
        <executions>
          <execution>
            <phase>pre-site</phase>
            <goals>
              <goal>render-books</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <books>
            <book>
              <directory>src/site</directory>
              <descriptor>src/books/writing-components-trial.xml</descriptor>
              <formats>
                <format>itext</format>
                <format>latex</format>
              </formats>
            </book>
          </books>
        </configuration>        
      </plugin>
    </plugins>
  </build>
  <reporting>
    <excludeDefaults>true</excludeDefaults>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-project-info-reports-plugin</artifactId>
        <reportSets>
          <reportSet>
            <reports>
              <report>cim</report>
              <report>issue-tracking</report>
              <report>mailing-list</report>
              <report>license</report>
              <report>project-team</report>
              <report>scm</report>
            </reports>
          </reportSet>
        </reportSets>
      </plugin>
    </plugins>
  </reporting>  
  <!-- repeated here so that plexus-site is not appended -->
  <scm>
    <connection>scm:svn:https://svn.codehaus.org/plexus/trunk/</connection>
    <developerConnection>scm:svn:https://svn.codehaus.org/plexus/trunk</developerConnection>
    <url>http://svn.codehaus.org/plexus/trunk/</url>
  </scm>
  <distributionManagement>
   <site>
      <id>plexus-site</id>
      <name>Plexus Website</name>
      <url>dav:https://dav.codehaus.org/plexus/</url>
    </site>
  </distributionManagement>
 
  <mailingLists>   
    <mailingList>
      <name>Plexus Lists</name>
      <subscribe>https://xircles.codehaus.org/projects/plexus/lists</subscribe>
      <unsubscribe>https://xircles.codehaus.org/projects/plexus/lists</unsubscribe>  
      <archive>http://www.nabble.com/Plexus-f2779.html</archive>   
    </mailingList>   
  </mailingLists>

</project>
