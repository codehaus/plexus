<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>plexus</groupId>
    <artifactId>plexus-services</artifactId>
    <version>1.0-alpha-1-SNAPSHOT</version>
  </parent>
  <groupId>plexus</groupId>
  <artifactId>plexus-service-xmlrpc</artifactId>
  <version>1.0-alpha-1-SNAPSHOT</version>
  <packaging>plexus-service</packaging>
  <name>Plexus XMLRPC Service</name>
  <dependencies>
    <dependency>
      <groupId>plexus</groupId>
      <artifactId>plexus-appserver</artifactId>
      <version>1.0-alpha-1-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>plexus</groupId>
      <artifactId>plexus-xmlrpc</artifactId>
      <version>1.0-beta-3-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>xmlrpc</groupId>
      <artifactId>xmlrpc</artifactId>
      <version>1.2</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>maven</groupId>
        <artifactId>maven-plexus-plugin</artifactId>
        <version>1.0-SNAPSHOT</version>
        <configuration>
          <serviceName>jetty</serviceName>
          <configurationDirectory>src/conf</configurationDirectory>
          <plexusConfiguration>src/conf/plexus.xml</plexusConfiguration>
          <basedir>target</basedir>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
