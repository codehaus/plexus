<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>plexus-services</artifactId>
    <groupId>plexus</groupId>
    <version>1.0-alpha-1-SNAPSHOT</version>
  </parent>
  <groupId>plexus</groupId>
  <artifactId>plexus-service-jetty</artifactId>
  <version>1.0-alpha-1-SNAPSHOT</version>
  <packaging>plexus-service</packaging>
  <name>Plexus Jetty Service</name>

  <dependencies>
    <dependency>
      <groupId>plexus</groupId>
      <artifactId>plexus-appserver</artifactId>
      <version>1.0-alpha-1-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>jetty</groupId>
      <artifactId>org.mortbay.jetty</artifactId>
      <version>4.2.22</version>
    </dependency>
    <dependency>
      <groupId>tomcat</groupId>
      <artifactId>jasper-runtime</artifactId>
      <version>4.1.30</version>
    </dependency>
    <dependency>
      <groupId>tomcat</groupId>
      <artifactId>jasper-compiler</artifactId>
      <version>4.1.30</version>
    </dependency>
    <dependency>
      <groupId>geronimo-spec</groupId>
      <artifactId>geronimo-spec-servlet</artifactId>
      <version>2.4-rc4</version>
    </dependency>
    <dependency>
      <groupId>geronimo-spec</groupId>
      <artifactId>geronimo-spec-jsp</artifactId>
      <version>2.0-rc4</version>
    </dependency>
    <dependency>
      <groupId>servletapi</groupId>
      <artifactId>servletapi</artifactId>
      <version>2.3</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-plexus-plugin</artifactId>
        <version>1.0-SNAPSHOT</version>
        <configuration>
          <serviceName>jetty</serviceName>
          <configurationDirectory>src/conf</configurationDirectory>
          <plexusConfiguration>src/conf/plexus.xml</plexusConfiguration>
          <basedir>target</basedir>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
