<?xml version="1.0" encoding="UTF-8"?>

<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.codehaus.plexus</groupId>
    <artifactId>plexus-services</artifactId>
    <version>1.0.2</version>
  </parent>
  <groupId>plexus</groupId>
  <artifactId>plexus-service-jetty</artifactId>
  <version>1.0-alpha-3-SNAPSHOT</version>
  <packaging>plexus-service</packaging>
  <name>Plexus Jetty Service</name>
  <dependencies>
    <dependency>
      <groupId>org.codehaus.plexus</groupId>
      <artifactId>plexus-appserver</artifactId>
      <version>1.0-alpha-5-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>jetty</groupId>
      <artifactId>org.mortbay.jetty</artifactId>
      <version>4.2.24</version>
    </dependency>
    <dependency>
      <groupId>tomcat</groupId>
      <artifactId>jasper-runtime</artifactId>
      <version>4.1.30</version>
    </dependency>
    <dependency>
      <groupId>tomcat</groupId>
      <artifactId>jasper-compiler</artifactId>
      <version>4.1.30</version>
    </dependency>
    <dependency>
      <groupId>geronimo-spec</groupId>
      <artifactId>geronimo-spec-servlet</artifactId>
      <version>2.4-rc4</version>
    </dependency>
    <dependency>
      <groupId>geronimo-spec</groupId>
      <artifactId>geronimo-spec-jsp</artifactId>
      <version>2.0-rc4</version>
    </dependency>
    <dependency>
      <groupId>servletapi</groupId>
      <artifactId>servletapi</artifactId>
      <version>2.3</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.plexus</groupId>
        <artifactId>plexus-maven-plugin</artifactId>
        <version>1.1-alpha-8-SNAPSHOT</version>
        <extensions>true</extensions>
        <configuration>
          <serviceName>jetty</serviceName>
          <serviceConfiguration>src/conf/plexus.xml</serviceConfiguration>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
