  </repository>

  <mailingLists>
    <mailingList>
      <name>User's Mailing List</name>
      <subscribe>http://lists.sourceforge.net/mailman/listinfo/javaemailserver-users</subscribe>
      <unsubscribe>http://lists.sourceforge.net/mailman/listinfo/javaemailserver-users</unsubscribe>
      <archive/>
