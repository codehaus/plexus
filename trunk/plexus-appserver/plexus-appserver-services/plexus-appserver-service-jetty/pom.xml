<project>
  <parent>
    <artifactId>plexus-appserver-services</artifactId>
    <groupId>org.codehaus.plexus</groupId>
    <version>2.0-alpha-1-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>plexus-appserver-service-jetty</artifactId>
  <packaging>plexus-service</packaging>
  <name>Plexus Jetty Service</name>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.plexus</groupId>
        <artifactId>plexus-appserver-maven-plugin</artifactId>
        <version>1.3-SNAPSHOT</version>
        <extensions>true</extensions>
        <configuration>
          <serviceName>jetty</serviceName>
          <serviceConfiguration>src/conf/plexus.xml</serviceConfiguration>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <!-- Compiling JSPs -->
    <dependency>
      <groupId>ant</groupId>
      <artifactId>ant</artifactId>
      <version>1.6.2</version>
    </dependency>  
    <dependency>
      <groupId>jetty</groupId>
      <artifactId>org.mortbay.jetty</artifactId>
      <version>4.2.24</version>
    </dependency>
    <dependency>
      <groupId>tomcat</groupId>
      <artifactId>jasper-compiler</artifactId>
      <version>4.1.30</version>
    </dependency>
    <dependency>
      <groupId>servletapi</groupId>
      <artifactId>servletapi</artifactId>
      <version>2.3</version>
    </dependency>
    <dependency>
      <groupId>geronimo-spec</groupId>
      <artifactId>geronimo-spec-servlet</artifactId>
      <version>2.4-rc4</version>
    </dependency>
    <dependency>
      <groupId>tomcat</groupId>
      <artifactId>jasper-runtime</artifactId>
      <version>4.1.30</version>
    </dependency>
    <dependency>
      <groupId>geronimo-spec</groupId>
      <artifactId>geronimo-spec-jsp</artifactId>
      <version>2.0-rc4</version>
    </dependency>
  </dependencies>
</project>
